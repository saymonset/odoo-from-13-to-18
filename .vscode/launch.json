{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "backend + Debug (cliente1)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/arquitectura/odoo18/odoo/odoo-bin",
      "console": "integratedTerminal",
      "args": [
        "--config=clientes/cliente1/conf/odoo.cfg",
        "--dev=all,qweb,xml,reload"
      ],
      "cwd": "${workspaceFolder}/arquitectura/odoo18",
      "justMyCode": false,
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "preLaunchTask": "enable_debugpy", // Tarea que inyecta debugpy
      "postDebugTask": "disable_debugpy" // Limpia despu√©s
    },
    {
      "name": "fronteEnd cliente1",
      "request": "launch",
      "type": "chrome",
      "url": "https://jumpjibe.com", // Cambia a tu puerto real
      "webRoot": "${workspaceFolder}/arquitectura/odoo18/clientes/cliente1/extra-addons/extra/"
    }
  ]
}