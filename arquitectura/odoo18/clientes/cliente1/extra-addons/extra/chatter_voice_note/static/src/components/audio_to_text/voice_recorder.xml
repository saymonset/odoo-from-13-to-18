<templates id="template" xml:space="preserve">
    <t t-name="chatter_voice_note.VoiceRecorder" owl="1">
        <div class="o_container p-4">
            <!-- Grabación inicial -->
            <t t-if="state.notes.length === 0">
                <h2>Voice Recorder</h2>
                <button t-on-click="toggleRecording"
                        t-att-class="'btn btn-lg ' + (state.recording ? 'btn-warning' : 'btn-primary')">
                    <i t-att-class="'fa ' + (state.recording ? 'fa-stop' : 'fa-microphone')"></i>
                    <t t-esc="state.recording ? ' Stop Recording' : ' Start Recording'"/>
                </button>
            </t>

            <!-- Contenido cuando hay notas -->
            <t t-if="state.notes.length > 0">
                <!-- Notas grabadas -->
                <div class="mt-3">
                    <h4>Notas grabadas:</h4>
                    <t t-foreach="sortedNotes" t-as="note" t-key="note.id || note.tempId">
                        <div class="mb-2 p-2 border rounded d-flex align-items-center justify-content-between">
                            <div class="flex-grow-1 me-3">
                                <strong t-esc="note.name"/>
                                <audio t-att-src="note.url" controls="true" class="d-block mt-1"></audio>
                                <div t-if="note.uploading" class="text-info">Subiendo...</div>
                                <div t-if="note.error" class="text-danger" t-esc="note.error"/>
                            </div>
                            <button t-on-click="() => deleteNote(note.id)"
                                    class="btn btn-sm btn-danger" aria-label="Eliminar">
                                <i class="fa fa-trash"/>
                            </button>
                        </div>
                    </t>
                </div>

                <!-- Búsqueda de contactos -->
                <div class="mt-3">
                    <h4>Seleccionar contactos:</h4>
                    <input t-model="state.searchTerm" t-on-input="searchContacts"
                           type="text" class="form-control"
                           placeholder="Buscar contactos por nombre..."/>
                    <div t-if="state.availableContacts.length > 0" class="mt-2">
                        <ul class="list-group">
                            <t t-foreach="state.availableContacts" t-as="contact" t-key="contact.id">
                                <li t-on-click="() => this.addContact(contact)"
                                    class="list-group-item d-flex justify-content-between align-items-center"
                                    style="cursor: pointer; background-color: #e3f2fd;">
                                    <span t-esc="contact.name"/>
                                    <span class="badge bg-primary rounded-pill">+</span>
                                </li>
                            </t>
                        </ul>
                    </div>
                </div>

                <!-- Contactos seleccionados -->
                <div t-if="state.selectedContacts.length > 0" class="mt-3">
                    <h4>Contactos seleccionados:</h4>
                    <table class="table table-hover">
                        <thead>
                            <tr><th>#</th><th>Nombre</th></tr>
                        </thead>
                        <tbody>
                            <t t-foreach="state.selectedContacts" t-as="contact" t-key="contact.id">
                                <tr>
                                    <th t-esc="contact_index + 1"/>
                                    <td t-on-click="() => removeContact(contact.id)" style="cursor: pointer;">
                                        <t t-esc="contact.name"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <!-- Botón enviar -->
                <div t-if="state.selectedContacts.length > 0">
                    <button t-on-click="sendToN8N"
                            t-att-disabled="state.isSending || state.recording || state.notes.length === 0"
                            class="btn btn-lg btn-success mt-3">
                        <span t-if="state.isSending" class="spinner-border spinner-border-sm me-2"/>
                        <t t-esc="state.isSending ? 'Enviando...' : 'Enviar a n8n'"/>
                    </button>
                </div>
            </t>

            <!-- Respuesta en tiempo real -->
            <div class="row mt-4">
                <div class="col-sm-6 mb-3">
                    <div class="card border-primary h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">Mensaje Final</h5>
                            <p class="card-text flex-grow-1">
                                <t t-if="state.loading_response">
                                    <i class="fa fa-spinner fa-spin"></i> Esperando respuesta...
                                </t>
                                <t t-else="">
                                    <t t-if="state.final_message">
                                        <t t-esc="state.final_message"/>
                                    </t>
                                    <t t-else=""><span class="text-muted">(Aún no hay mensaje)</span></t>
                                </t>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
                    <div class="card border-success h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-success">Respuesta IA</h5>
                            <p class="card-text flex-grow-1">
                                <t t-if="state.loading_response">
                                    <i class="fa fa-spinner fa-spin"></i> Generando IA...
                                </t>
                                <t t-else="">
                                    <t t-if="state.answer_ia">
                                        <t t-esc="state.answer_ia"/>
                                    </t>
                                    <t t-else=""><span class="text-muted">(Aún no hay respuesta)</span></t>
                                </t>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div t-if="state.error" class="mt-3 text-danger">
                <t t-esc="state.error"/>
            </div>
        </div>
    </t>
</templates>