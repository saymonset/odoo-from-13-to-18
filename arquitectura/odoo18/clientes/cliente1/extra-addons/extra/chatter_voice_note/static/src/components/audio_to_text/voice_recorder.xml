<templates id="template" xml:space="preserve">
    <t t-name="chatter_voice_note.VoiceRecorder" owl="1">
        <div class="o_container p-4">

            <!-- INFORMACIÓN DE DEBUG -->
            <div class="alert alert-info mb-3">
                <strong>Debug Info:</strong><br/>
                User ID: <t t-esc="userId"/><br/>
                Loading: <t t-esc="state.loading_response"/><br/>
                Final Message: <t t-esc="state.final_message"/><br/>
                Answer IA: <t t-esc="state.answer_ia"/>
            </div>

            <!-- BOTÓN DE PRUEBA -->
            <div class="mt-4 text-center">
                <button class="btn btn-warning btn-lg" t-on-click="testBus">
                    <i class="fa fa-bell"></i>
                    PROBAR NOTIFICACIÓN BUS
                </button>
                <button class="btn btn-info btn-lg" t-on-click="testManualBus">
                    TEST MANUAL BUS
                </button>
            </div>

            <!-- ... (el resto del template se mantiene igual) ... -->

            <!-- Respuesta en tiempo real MEJORADA -->
            <div class="row mt-4">
                <div class="col-sm-6 mb-3">
                    <div class="card border-primary h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">
                                <i class="fa fa-message"></i> Mensaje Final
                                <t t-if="state.final_message">
                                    <span class="badge bg-success ms-2">✓ Recibido</span>
                                </t>
                            </h5>
                            <p class="card-text flex-grow-1">
                                <t t-if="state.loading_response">
                                    <i class="fa fa-spinner fa-spin"></i> Esperando respuesta del servidor...
                                </t>
                                <t t-else="">
                                    <t t-if="state.final_message">
                                        <strong class="text-success" t-esc="state.final_message"/>
                                    </t>
                                    <t t-else=""><span class="text-muted">(Aún no hay mensaje)</span></t>
                                </t>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
                    <div class="card border-success h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-success">
                                <i class="fa fa-robot"></i> Respuesta IA
                                <t t-if="state.answer_ia">
                                    <span class="badge bg-success ms-2">✓ Recibido</span>
                                </t>
                            </h5>
                            <p class="card-text flex-grow-1">
                                <t t-if="state.loading_response">
                                    <i class="fa fa-spinner fa-spin"></i> Generando respuesta de IA...
                                </t>
                                <t t-else="">
                                    <t t-if="state.answer_ia">
                                        <strong class="text-success" t-esc="state.answer_ia"/>
                                    </t>
                                    <t t-else=""><span class="text-muted">(Aún no hay respuesta)</span></t>
                                </t>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div t-if="state.error" class="mt-3 text-danger">
                <t t-esc="state.error"/>
            </div>
        </div>
    </t>
</templates>