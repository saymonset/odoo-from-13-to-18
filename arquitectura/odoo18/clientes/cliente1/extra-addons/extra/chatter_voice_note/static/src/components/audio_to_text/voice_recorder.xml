<templates id="template" xml:space="preserve">
    <t t-name="chatter_voice_note.VoiceRecorder" owl="1">
        <div class="o_container p-4">

            <!-- INFORMACIÃ“N DE DEBUG MEJORADA -->
       <!-- ACTUALIZA la secciÃ³n de debug en el template -->
        <div class="alert alert-info mb-3">
            <strong>Debug Info:</strong><br/>
            User ID: <t t-esc="userId"/><br/>
            Loading: <t t-esc="state.loading_response"/><br/>
            Testing: <t t-esc="state.isTesting"/><br/>
            Final Message: <t t-esc="state.final_message"/><br/>
            Answer IA: <t t-esc="state.answer_ia"/><br/>
            Estado: <t t-esc="state.debug_info"/>
        </div>
            <!-- BOTONES DE PRUEBA MEJORADOS -->
            <div class="mt-4 text-center">
                <button class="btn btn-primary btn-lg me-2" t-on-click="testManualBus" t-att-disabled="state.loading_response">
                    <t t-if="state.loading_response">
                        <i class="fa fa-spinner fa-spin"></i> Procesando...
                    </t>
                    <t t-else="">
                        ðŸ§ª Test Manual BUS
                    </t>
                </button>
                
                <button class="btn btn-outline-secondary btn-lg" t-on-click="testBus">
                    Test Simple Backend
                </button>
            </div>

            <!-- RESULTADOS -->
            <div class="row mt-4">
                <div class="col-sm-6 mb-3">
                    <div class="card border-primary h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">
                                <i class="fa fa-message"></i> Mensaje Final
                                <t t-if="state.final_message">
                                    <span class="badge bg-success ms-2">âœ“ Recibido</span>
                                </t>
                            </h5>
                            <p class="card-text flex-grow-1">
                                <t t-if="state.loading_response">
                                    <i class="fa fa-spinner fa-spin"></i> <t t-esc="state.debug_info"/>
                                </t>
                                <t t-else="">
                                    <t t-if="state.final_message">
                                        <strong class="text-success" t-esc="state.final_message"/>
                                    </t>
                                    <t t-else="">
                                        <span class="text-muted">(AÃºn no hay mensaje)</span>
                                    </t>
                                </t>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
                    <div class="card border-success h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-success">
                                <i class="fa fa-robot"></i> Respuesta IA
                                <t t-if="state.answer_ia">
                                    <span class="badge bg-success ms-2">âœ“ Recibido</span>
                                </t>
                            </h5>
                            <p class="card-text flex-grow-1">
                                <t t-if="state.loading_response">
                                    <i class="fa fa-spinner fa-spin"></i> <t t-esc="state.debug_info"/>
                                </t>
                                <t t-else="">
                                    <t t-if="state.answer_ia">
                                        <strong class="text-success" t-esc="state.answer_ia"/>
                                    </t>
                                    <t t-else="">
                                        <span class="text-muted">(AÃºn no hay respuesta)</span>
                                    </t>
                                </t>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div t-if="state.error" class="mt-3 alert alert-danger">
                <t t-esc="state.error"/>
            </div>
        </div>
    </t>
</templates>