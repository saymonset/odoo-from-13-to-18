<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Assets para cargar el CSS y JS del chat bot -->
    <template id="assets_frontend" name="chat_bot_assets" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/chat-bot-unisa/static/src/css/chat-bot.css"/>
            <script type="text/javascript" src="/chat-bot-unisa/static/src/components/ChatBotWrapper.js"></script>
        </xpath>
    </template>

    <!-- Insertar el botón del chat en el layout -->
    <template id="insertar_boton_en_home" inherit_id="website.layout" name="Insertar Botón Chat en Home">
        <xpath expr="//div[hasclass('wrap')]|//div[@id='wrap']|//main" position="inside">
            <div class="container my-5">
                <t t-call="chat-bot-unisa.ChatBotWrapper" 
                   t-webhookUrl="'https://n8n.jumpjibe.com/webhook/2b4e566c-dbd6-4deb-af84-8a8fddd16830/chat'"/>
            </div>
        </xpath>
    </template>

</odoo>