<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View a_hospital.disease.type View List -->
    <record id="view_a_hospital_disease_type_list" model="ir.ui.view">
        <field name="name">view.a_hospital.disease.type.list</field>
        <field name="model">a_hospital.disease.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View a_hospital.disease.type form -->
    <record id="view_a_hospital_disease_type_form" model="ir.ui.view">
        <field name="name">view.a_hospital.disease.type.form</field>
        <field name="model">a_hospital.disease.type</field>
        <field name="arch" type="xml">
            <form string="A_hospital Disease Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View a_hospital.disease.type search -->
    <record id="view_a_hospital_disease_type_search" model="ir.ui.view">
        <field name="name">view.a_hospital.disease.type.search</field>
        <field name="model">a_hospital.disease.type</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action a_hospital.disease.type -->
    <record id="action_a_hospital_disease_type" model="ir.actions.act_window">
        <field name="name">A_hospital Disease Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">a_hospital.disease.type</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new A_hospital Disease Type.
            </p>
        </field>
    </record>

</odoo>
