<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pdfmake.TestPdfReport">
        <div class="oe_button_box" t-if="widget.props.record">
            <button type="button" 
                    class="btn btn-primary"
                    t-att-disabled="state.loading or not state.pdfmakeAvailable"
                    t-on-click="generateTestPdf">
                <i class="fa fa-file-pdf-o" role="img"/>
                <span t-esc="state.loading ? 'Generando...' : 'Probar PDFMake'"/>
            </button>
            <div t-if="!state.pdfmakeAvailable" class="text-warning mt-1">
                <small>PDFMake no est√° cargado en el navegador</small>
            </div>
        </div>
    </t>
</templates>