<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_logo_corner" name="Solo Logo Arriba Derecha">
        <t t-name="pdfmake.external_layout_logo_corner">
            <div style="position: relative; min-height: 297mm; padding: 30px 60px 60px 60px; font-family: Helvetica, Arial, sans-serif;">

                <!-- LOGO BIEN ARRIBA -->
                <div style="position: absolute; top: 8px; right: 60px; z-index: 9999;">
                    <t t-if="logo_str and logo_str.strip()">
                        <img t-att-src="'data:image/png;base64,' + logo_str"
                             style="max-height: 75px; max-width: 220px; height: auto; width: auto;"
                             alt="Logo"/>
                    </t>
                    <t t-else="">
                        <div style="background: #875A7B; color: white; padding: 12px 28px; border-radius: 10px; font-weight: bold; font-size: 18px;">
                            <t t-out="company.name"/>
                        </div>
                    </t>
                </div>

                <!-- CONTENIDO MÃ‰DICO -->
                <div style="margin-top: 70px;">
                    <t t-out="0"/>
                </div>

            </div>
        </t>
    </template>
</odoo>