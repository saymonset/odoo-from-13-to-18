<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pdf_printer_form" model="ir.ui.view">
        <field name="name">pdfmake.printer.form</field>
        <field name="model">pdfmake.printer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button 
                        name="action_install_pdfmake" 
                        string="Instalar PDFMake Manualmente" 
                        type="object" 
                        class="btn-primary"
                        attrs="{'invisible': [('pdfmake_available', '=', True)]}"/>
                    <field name="pdfmake_available" widget="boolean_button" 
                           options="{'terminology': 'installed'}" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="use_local_fonts"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- En Odoo 18 se usa 'tree' en lugar de 'list' -->
    <record id="view_pdf_printer_tree" model="ir.ui.view">
        <field name="name">pdfmake.printer.tree</field>
        <field name="model">pdfmake.printer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="pdfmake_available" widget="boolean_button"/>
                <field name="use_local_fonts"/>
            </list>
        </field>
    </record>

    <record id="action_pdf_printer" model="ir.actions.act_window">
        <field name="name">PDF Printers</field>
        <field name="res_model">pdfmake.printer</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem 
        id="menu_pdf_printer" 
        name="PDF Printer" 
        parent="base.menu_administration"
        action="action_pdf_printer"
        sequence="100"/>
</odoo>