<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VISTAS DEL PRINTER -->
    <record id="view_pdf_printer_form" model="ir.ui.view">
        <field name="name">pdfmake.printer.form</field>
        <field name="model">pdfmake.printer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="use_local_fonts"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pdf_printer_tree" model="ir.ui.view">
        <field name="name">pdfmake.printer.tree</field>
        <field name="model">pdfmake.printer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="use_local_fonts"/>
            </list>
        </field>
    </record>

    <record id="action_pdf_printer" model="ir.actions.act_window">
        <field name="name">PDF Printers</field>
        <field name="res_model">pdfmake.printer</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem 
        id="menu_pdf_printer" 
        name="PDF Printer" 
        parent="base.menu_administration"
        action="action_pdf_printer"
        sequence="100"/>

    <!-- VISTAS PARA EL MODELO DE PRUEBA (test.pdf.report) -->
    <record id="view_test_pdf_report_tree" model="ir.ui.view">
        <field name="name">test.pdf.report.tree</field>
        <field name="model">test.pdf.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="amount"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_test_pdf_report_form" model="ir.ui.view">
        <field name="name">test.pdf.report.form</field>
        <field name="model">test.pdf.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_pdf" 
                            type="object" 
                            string="Generar PDF" 
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                        <field name="active"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIÓN DE VENTANA PARA LA LISTA DE PRUEBAS -->
    <record id="action_test_pdf_report_list" model="ir.actions.act_window">
        <field name="name">Pruebas PDFMake</field>
        <field name="res_model">test.pdf.report</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENÚ PRINCIPAL DE PRUEBAS -->
    <menuitem
        id="menu_test_pdf_report"
        name="Pruebas PDFMake"
        parent="base.menu_administration"
        action="action_test_pdf_report_list"
        sequence="10"/>

</odoo>