<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View OpenAIConfig View List -->
    <record id="view_OpenAIConfig_list" model="ir.ui.view">
        <field name="name">view.OpenAIConfig.list</field>
        <field name="model">openai.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="default_model"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- View OpenAIConfig form -->
    <record id="view_OpenAIConfig_form" model="ir.ui.view">
        <field name="name">view.OpenAIConfig.form</field>
        <field name="model">openai.config</field>
        <field name="arch" type="xml">
            <form string="OpenAIConfig">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Configuration Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="api_key" password="True" placeholder="Enter your OpenAI API Key..."/>
                            <field name="default_model" widget="selection"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View OpenAIConfig search -->
    <record id="view_OpenAIConfig_search" model="ir.ui.view">
        <field name="name">view.OpenAIConfig.search</field>
        <field name="model">openai.config</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action OpenAIConfig -->
    <record id="action_OpenAIConfig" model="ir.actions.act_window">
        <field name="name">OpenAIConfig</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">openai.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new OpenAIConfig.
            </p>
        </field>
    </record>

     <menuitem id="openai_main_menu" name="open AI saymon" sequence="1"/>

        <menuitem id="openai_type_menu" name="openAI" parent="openai_main_menu" 
            action="action_OpenAIConfig" 
            sequence="1"/>

</odoo>
