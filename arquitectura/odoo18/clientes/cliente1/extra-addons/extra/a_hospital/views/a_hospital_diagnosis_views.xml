<odoo>
    <!-- Tree view for Diagnosis model -->
    <record id="view_diagnosis_tree" model="ir.ui.view">
        <field name="name">Diagnosis List</field>
        <field name="model">a_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <list>
                <!-- Display fields description and approval status for diagnoses -->
                <field name="description"/>
               
            </list>
        </field>
    </record>

 <!-- Form view for Diagnosis model -->
    <record id="view_diagnosis_form" model="ir.ui.view">
        <field name="name">Diagnosis Form</field>
        <field name="model">a_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <header>
                      <button name="action_open_voice_recorder"
                                type="object"
                                string="Grabar Diagn贸stico por Voz"
                                class="btn-primary"
                                invisible="id == False"/>


                </header>
                <sheet>
                    <group>
                        <group string="Diagnosis Information">
                             <field name="description" 
                               placeholder="Escriba el diagn贸stico o use el bot贸n para grabar voz..."/>
                        </group>
                    </group>
                    <!-- Nueva secci贸n para archivos adjuntos -->
                    <notebook>
                        <page string="Archivos Adjuntos">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
 

    <!-- Action to open Diagnosis views (list, form, pivot) -->
    <record id="action_a_hospital_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnoses</field>
        <field name="res_model">a_hospital.diagnosis</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
