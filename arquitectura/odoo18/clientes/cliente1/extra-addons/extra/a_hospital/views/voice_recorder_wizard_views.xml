<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_voice_recorder_wizard_form" model="ir.ui.view">
        <field name="name">a_hospital.voice_recorder.wizard.form</field>
        <field name="model">a_hospital.voice_recorder.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_voice_recorder" 
                            type="object" 
                            string="Abrir Grabador de Voz"
                            class="btn-primary"/>
                    <button name="action_save_to_diagnosis" 
                            type="object" 
                            string="Guardar en Diagnóstico"
                            class="btn-success"
                            invisible="not final_message or final_message == ''"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </header>
                <sheet>
                    <group>
                        <group string="Mensaje Generado">
                            <field name="final_message" 
                                   readonly="1"
                                   placeholder="El mensaje aparecerá aquí después de usar el grabador de voz..."
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>