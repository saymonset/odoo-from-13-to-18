<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de lista (antes tree) -->
    <record id="view_test_test_tree" model="ir.ui.view">
        <field name="name">test.test.list</field>
        <field name="model">test.test</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Vista de búsqueda (esta sí sigue igual) -->
    <record id="view_test_test_search" model="ir.ui.view">
        <field name="name">test.test.search</field>
        <field name="model">test.test</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Acción (aquí también hay que cambiar "tree" por "list" en view_mode) -->
    <record id="action_test_test" model="ir.actions.act_window">
        <field name="name">Test Records</field>
        <field name="res_model">test.test</field>
        <field name="view_mode">list,form</field>  <!-- antes era tree,form -->
    </record>

    <!-- Menú -->
   <!-- Menú raíz -->
<menuitem id="menu_test_root" 
          name="Módulos Extra" 
          sequence="100"
           web_icon="conver_pos_sales,static/description/icon.png"/>
              <!-- o usa un icono de FontAwesome -->
          />

<!-- Submenú -->
<menuitem id="menu_test_test" 
          name="Test Test" 
          parent="menu_test_root"
          action="action_test_test"/>

</odoo>