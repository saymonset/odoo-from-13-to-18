<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View test.test View Tree -->
    <record id="view_test_test_tree" model="ir.ui.view">
        <field name="name">view.test.test.tree</field>
        <field name="model">test.test</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View test.test form -->
    <record id="view_test_test_form" model="ir.ui.view">
        <field name="name">view.test.test.form</field>
        <field name="model">test.test</field>
        <field name="arch" type="xml">
            <form string="Test Test">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View test.test search -->
    <record id="view_test_test_search" model="ir.ui.view">
        <field name="name">view.test.test.search</field>
        <field name="model">test.test</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action test.test -->
    <record id="action_test_test" model="ir.actions.act_window">
        <field name="name">Test Test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">test.test</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Test Test.
            </p>
        </field>
    </record>

</odoo>
